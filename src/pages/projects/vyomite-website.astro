---
import RootLayout from "../../layouts/RootLayout.astro";
import { Image } from "astro:assets";
import VyomiteCaseStudy from "../../assets/vyomite-case-study.png";
import vyomiteMobandLap from "../../assets/vyomiteMobandLap.png";
import Inspiration1 from "../../assets/inspirations/ref_1.png";
import Inspiration2 from "../../assets/inspirations/ref_2.png";
import Inspiration3 from "../../assets/inspirations/ref_3.png";
import Inspiration4 from "../../assets/inspirations/ref_4.png";
import WFAbout from "../../assets/wireframe/about.png";
import WFContact from "../../assets/wireframe/contact.png";
import WFHome from "../../assets/wireframe/home.png";
import WFHome2 from "../../assets/wireframe/home2.png";
import WFService from "../../assets/wireframe/service.png";
import WFWork from "../../assets/wireframe/work.png";

import UF1 from "../../assets/user_flows/image_1.png";
import UF2 from "../../assets/user_flows/image_2.png";
import Homepage from "../../assets/Homepage.png";
// Replace with your actual prototype URL
const prototypeUrl = "https://www.figma.com/file/your-prototype-link";
// SEO – tweak later
const title = "Vyomite Website — Case Study";
const description =
    "End-to-end web case study: goals, research, flows, wireframes, and visual design.";
---

<RootLayout title={title} description={description}>
    <main class="px-4 sm:px-8 lg:px-12 py-8 sm:py-12">
        {/* Breadcrumbs */}
        <nav aria-label="Breadcrumb" class="text-sm text-zinc-400 mb-6">
            <a href="/" class="hover:text-zinc-200">Home</a>
            <span class="mx-2">/</span>
            <a href="/projects" class="hover:text-zinc-200">Work</a>
            <span class="mx-2">/</span>
            <span class="text-zinc-200">Vyomite Website</span>
        </nav>

        {/* HERO */}
        <section
            class="relative overflow-hidden rounded-3xl h-[30rem] sm:h-[36rem] md:h-[500px] mb-10 sm:mb-14 flex items-end"
        >
            <div
                class="absolute inset-0 -z-20 bg-cover bg-top"
                style={`background-image: url(${Homepage.src})`}
            >
            </div>
            <div
                class="absolute inset-0 -z-10 bg-gradient-to-b from-black/50 via-[#12082f]/40 to-[#08050f]/80"
            >
            </div>
            <div
                class="relative z-10 mx-auto flex w-full max-w-4xl items-end justify-center gap-6 px-6 pb-0 -mb-30"
            >
                <div
                    class="relative hidden sm:block h-[16rem] md:h-[18rem] w-[10rem] md:w-[16rem] rounded-[2.5rem] border-0 bg-black/40 shadow-[0_20px_40px_rgba(0,0,0,0.45)] p-3"
                >
                    <div
                        class="h-full w-full overflow-hidden rounded-[1.8rem] bg-black/60"
                    >
                        <Image
                            src={vyomiteMobandLap}
                            alt="Vyomite mobile screen"
                            class="h-full w-full object-cover"
                            loading="lazy"
                        />
                    </div>
                </div>
                <div
                    class="relative h-[18rem] sm:h-[22rem] md:h-[26rem] w-[12rem] sm:w-[16rem] md:w-[20rem] rounded-[3rem] border-0 bg-black/30 shadow-[0_28px_60px_rgba(0,0,0,0.5)] p-3"
                >
                    <div
                        class="h-full w-full overflow-hidden rounded-[2.2rem] bg-black/60"
                    >
                        <Image
                            src={VyomiteCaseStudy}
                            alt="Vyomite tablet screen"
                            class="h-full w-full object-cover"
                            loading="lazy"
                        />
                    </div>
                </div>
                <div
                    class="relative hidden sm:block h-[16rem] md:h-[18rem] w-[10rem] md:w-[16rem] rounded-[2.5rem] border-0 bg-black/40 shadow-[0_20px_40px_rgba(0,0,0,0.45)] p-3"
                >
                    <div
                        class="h-full w-full overflow-hidden rounded-[1.8rem] bg-black/60"
                    >
                        <Image
                            src={Homepage}
                            alt="Vyomite tablet detail"
                            class="h-full w-full object-cover"
                            loading="lazy"
                        />
                    </div>
                </div>
            </div>
        </section>
        <div class="max-w-3xl mb-10 sm:mb-14">
            <h3 class="text-zinc-300 text-xl mb-5">Abhishek Patrabansha</h3>
            <h1
                class="text-3xl sm:text-5xl font-bold tracking-tight text-white"
            >
                Vyomite Website — Case Study
            </h1>
            <p class="mt-3 sm:mt-4 text-zinc-200 leading-relaxed">
                Vyomite is a small startup that provides web services. I
                redesigned their existing website to create a modern, cohesive,
                and user-friendly interface that reflects the brand, simplifies
                navigation, and increases engagement with prospective clients.
            </p>
            <p class="mt-3 sm:mt-4 text-zinc-200 leading-relaxed">
                This project followed my practice cloning sites to build
                web-design skills; during my internship I redesigned Vyomite’s
                existing website to give it a more modern, cohesive look.
            </p>
        </div>

        {/* META */}
        <section class="grid sm:grid-cols-2 lg:grid-cols-3 gap-24 mb-12">
            <div>
                <h3 class="text-zinc-300 uppercase font-medium mb-2">Role</h3><p
                    class="text-zinc-100"
                >
                    UI/UX Designer (Intern). Solo design with quick feedback
                    from peers.
                </p>
            </div>
            <div>
                <h3 class="text-zinc-300 uppercase font-medium mb-2">
                    Tools
                </h3><p class="text-zinc-100">Figma, basic icon set.</p>
            </div>
            <div>
                <h3 class="text-zinc-300 uppercase font-medium mb-2">
                    Duration
                </h3><p class="text-zinc-100">
                    Vyomite (Personal Company) / 3 months
                </p>
            </div>
        </section>

        {/* CHALLENGE + GOALS */}
        <section class="mb-14">
            <div class="md:grid md:grid-cols-2 md:gap-8 md:items-start">
                <div>
                    <h2
                        class="text-2xl sm:text-3xl font-semibold tracking-tight text-zinc-100"
                    >
                        Problem Statement
                    </h2>
                    <div class="mt-5 prose prose-invert max-w-none">
                        <p>
                            The homepage didn’t clearly show what Vyomite does
                            and the primary contact action was buried below the
                            fold. As a result, visitors struggled to find
                            services and had to follow a long path to contact,
                            reducing engagement and lead potential.
                        </p>
                        <ul>
                            <li>
                                <span class="font-bold"
                                    >Scroll Cue Visibility:</span
                                > Tested and refined visual cues to help users notice
                                more content below the homepage fold.
                            </li>
                            <li>
                                <span class="font-bold"
                                    >Homepage Animation Selection:</span
                                > Chose an animation that enhanced visuals without
                                distracting from core content.
                            </li>
                            <li>
                                <span class="font-bold">Feedback clarity:</span>
                                Feedback from reviewers/mentors was often unclear,
                                requiring additional discussion and interpretation
                                to fully understand and apply suggested changes.
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="mt-6 md:mt-0">
                    <div
                        class="grid grid-cols-1 sm:grid-cols-2 gap-4 md:h-[360px]"
                    >
                        <div
                            class="relative aspect-[3/4] sm:aspect-[4/5] md:aspect-auto md:h-full rounded-2xl bg-zinc-800/40 overflow-hidden"
                        >
                            <Image
                                src={VyomiteCaseStudy}
                                alt="Vyomite homepage mockup (top half)"
                                class="absolute inset-0 h-full w-full object-cover object-top"
                                loading="lazy"
                            />
                        </div>
                        <div
                            class="relative aspect-[3/4] sm:aspect-[4/5] md:aspect-auto md:h-full rounded-2xl bg-zinc-800/40 overflow-hidden"
                        >
                            <Image
                                src={VyomiteCaseStudy}
                                alt="Vyomite homepage mockup (bottom half)"
                                class="absolute inset-0 h-full w-full object-cover object-bottom"
                                loading="lazy"
                            />
                        </div>
                    </div>
                </div>
            </div>

            <h3 class="mt-10 text-xl font-semibold text-zinc-100">Goals</h3>
            <p class="text-zinc-300 mt-3">
                This redesign sharpens Vyomite’s brand presence and levels up
                the browsing experience for prospective clients.
            </p>
            <ul class="mt-4 space-y-2 text-zinc-300 list-disc list-inside">
                <li>
                    Create a modern, professional design that reflects the
                    brand.
                </li>
                <li>
                    Maintain a consistent visual style and easy-to-navigate
                    layout.
                </li>
                <li>
                    Boost engagement by making the site appealing and accessible
                    for potential clients.
                </li>
            </ul>
        </section>

        {/* RESEARCH */}
        <section class="mb-14">
            <h2
                class="text-2xl sm:text-3xl font-semibold tracking-tight text-zinc-100"
            >
                Design Process
            </h2>
            <p class="text-zinc-300 mt-3 max-w-3xl">
                To guide the redesign, I followed a structured process to ensure
                the design was modern, cohesive, and user-friendly. Although
                formal surveys or interviews were not conducted, my research
                included:
            </p>
            <div class="prose prose-invert max-w-none mt-5">
                <ul>
                    <li>
                        <span class="font-bold">Research & Inspiration:</span> Collected
                        samples of modern website designs to explore trends and gather
                        ideas.
                    </li>
                    <li>
                        <span class="font-bold"
                            >Wireframing / Low-Fidelity Design:</span
                        > Created basic layouts to organize content and structure
                        the site effectively.
                    </li>
                    <li>
                        <span class="font-bold">Design System:</span> Developed consistent
                        typography, color schemes, and UI components to maintain
                        visual cohesion.
                    </li>
                    <li>
                        <span class="font-bold"
                            >High-Fidelity Design & Prototype:</span
                        > Applied the design system to create the actual website
                        mockups and interactive prototype.
                    </li>
                    <li>
                        <span class="font-bold">Testing:</span> Reviewed the design
                        for usability, visual consistency, and overall user experience
                        before final implementation.
                    </li>
                </ul>

                <p><span class="font-bold">Key Takeaways</span></p>
                <ul>
                    <li>
                        Collecting design references early helped define a clear
                        visual direction.
                    </li>
                    <li>
                        Establishing a design system improved consistency and
                        sped up the high-fidelity design phase.
                    </li>
                    <li>
                        Considering screen flow and user flow ensured the site
                        was easy to navigate and aligned with user expectations.
                    </li>
                    <li>
                        Testing the prototype confirmed the final design was
                        intuitive, visually appealing, and aligned with the
                        brand.
                    </li>
                </ul>
            </div>
        </section>

        {/* RESEARCH */}
        <section class="mb-14">
            <h2
                class="text-2xl sm:text-3xl font-semibold tracking-tight text-zinc-100"
            >
                Research & Analysis
            </h2>
            <p class="text-zinc-300 mt-3">
                Collected and studied modern website examples to recognize key
                design patterns, usability principles, and creative techniques
                influencing current digital aesthetics.
            </p>
            <div class="mt-6 grid grid-cols-2 sm:grid-cols-2 gap-3">
                <div class="rounded-xl bg-zinc-800/50 overflow-hidden">
                    <Image
                        src={Inspiration1}
                        alt="Vyomite mobile screen"
                        class="aspect-[5/4] rounded-xl bg-zinc-800/50 w-full h-auto object-cover"
                        loading="lazy"
                    />
                </div>
                <div class="rounded-xl bg-zinc-800/50 overflow-hidden">
                    <Image
                        src={Inspiration2}
                        alt="Vyomite mobile screen"
                        class="aspect-[5/4] rounded-xl bg-zinc-800/50 w-full h-auto object-cover"
                        loading="lazy"
                    />
                </div>
                <div class="rounded-xl bg-zinc-800/50 overflow-hidden">
                    <Image
                        src={Inspiration3}
                        alt="Vyomite mobile screen"
                        class="aspect-[5/4] rounded-xl bg-zinc-800/50 w-full h-auto object-cover"
                        loading="lazy"
                    />
                </div>
                <div class="rounded-xl bg-zinc-800/50 overflow-hidden">
                    <Image
                        src={Inspiration4}
                        alt="Vyomite mobile screen"
                        class="aspect-[5/4] rounded-xl bg-zinc-800/50 w-full h-auto object-cover"
                        loading="lazy"
                    />
                </div>
            </div>
        </section>

        {/* SKETCHES */}
        <section class="mb-14">
            <h2
                class="text-2xl sm:text-3xl font-semibold tracking-tight text-zinc-100"
            >
                Concepts, Sketching, Wireframes
            </h2>
            <p class="text-zinc-300 mt-3">
                During this phase, I explored different layout ideas and visual
                structures to find the best way to present the company’s
                services and information clearly. I started with low-fidelity
                wireframes to organize content and establish the site’s flow.
                These early sketches helped me experiment with navigation paths
                and screen flow before moving to detailed design.

                <p class="text-zinc-300 mt-3">
                    This stage was crucial for identifying opportunities to
                    improve usability and ensure a consistent, intuitive user
                    experience. It laid the foundation for building a cohesive
                    design system and high-fidelity prototype.
                </p>
            </p>
            <div class="mt-6 grid grid-cols-2 sm:grid-cols-3 gap-3">
                <Image
                    src={WFAbout}
                    alt="Vyomite mobile screen"
                    class="aspect-[5/4] rounded-xl bg-zinc-800/50"
                    loading="lazy"
                />
                <Image
                    src={WFContact}
                    alt="Vyomite mobile screen"
                    class="aspect-[5/4] rounded-xl bg-zinc-800/50"
                    loading="lazy"
                />
                <Image
                    src={WFHome}
                    alt="Vyomite mobile screen"
                    class="aspect-[5/4] rounded-xl bg-zinc-800/50"
                    loading="lazy"
                />
                <Image
                    src={WFHome2}
                    alt="Vyomite mobile screen"
                    class="aspect-[5/4] rounded-xl bg-zinc-800/50"
                    loading="lazy"
                />
                <Image
                    src={WFService}
                    alt="Vyomite mobile screen"
                    class="aspect-[5/4] rounded-xl bg-zinc-800/50"
                    loading="lazy"
                />
                <Image
                    src={WFWork}
                    alt="Vyomite mobile screen"
                    class="aspect-[5/4] rounded-xl bg-zinc-800/50"
                    loading="lazy"
                />
            </div>
        </section>

        {/* USER FLOW */}
        <section class="mb-14">
            <h2
                class="text-2xl sm:text-3xl font-semibold tracking-tight text-zinc-100"
            >
                User Flow
            </h2>
            <div class="text-zinc-300 mt-3">
                <p class="prose prose-invert max-w-none mt-5">
                    Toward the end of the project, I learned about user flow and
                    applied it to key sections. I ensured that:
                </p>
                <div class="prose prose-invert max-w-none mt-5">
                    <ul>
                        <li>
                            [Fig 1] Uploaded files or entered content remain
                            saved if the user goes back to edit other
                            information, preventing loss of work.
                        </li>
                        <li>
                            [Fig 2] Conditional scenarios were accounted for,
                            such as showing available jobs if any exist, or
                            displaying a contact form if no positions are open.
                        </li>
                    </ul>
                </div>

                <p>
                    These considerations made the website more flexible,
                    intuitive, and user-friendly, allowing visitors to navigate
                    and complete tasks without frustration.
                </p>
                <!-- </p> -->
            </div>
            <div class="mt-6 grid sm:grid-cols-2 gap-4">
                <div class="flex flex-col items-center">
                    <Image
                        src={UF1}
                        alt="Vyomite mobile screen"
                        class="aspect-[16/9] rounded-xl bg-zinc-800/50"
                        loading="lazy"
                    />
                    <p class="text-zinc-300 mt-3">[Fig 1]</p>
                </div>

                <div class="flex flex-col items-center">
                    <Image
                        src={UF2}
                        alt="Vyomite mobile screen"
                        class="aspect-[16/9] rounded-xl bg-zinc-800/50"
                        loading="lazy"
                    />
                    <p class="text-zinc-300 mt-3">[Fig 2]</p>
                </div>
            </div>
        </section>

        {/* VISUAL SYSTEM */}
        <section class="mb-14">
            <h2
                class="text-2xl sm:text-3xl font-semibold tracking-tight text-zinc-100"
            >
                Visual Design
            </h2>

            <p class="text-zinc-200">
                The next plan of action was to create colour palettes and
                typography that would help communicate the brand’s identity and
                also give the product an exciting feel.
            </p>

            <div class="mt-5">
                <p class="text-zinc-200 font-medium">StyleGuide</p>

                <div class="mt-5 grid md:grid-cols-2 gap-8">
                    <div>
                        <h3 class="text-zinc-200 font-medium mb-2">
                            Primary Colors
                        </h3>
                        <div class="flex gap-3">
                            <div
                                class="h-16 aspect-[1/1] rounded-lg"
                                style="background:#390061"
                            >
                            </div>
                            <div
                                class="h-16 aspect-[1/1] rounded-lg"
                                style="background:#6F4BB0"
                            >
                            </div>
                            <div
                                class="h-16 aspect-[1/1] rounded-lg"
                                style="background:#765EEF"
                            >
                            </div>
                            <div
                                class="h-16 aspect-[1/1] rounded-lg"
                                style="background:#A78BFA"
                            >
                            </div>
                        </div>
                    </div>

                    <div>
                        <h3 class="text-zinc-200 font-medium mb-2">
                            Gray Colors
                        </h3>
                        <div class="flex gap-3">
                            <div
                                class="h-16 aspect-[1/1] rounded-lg"
                                style="background:#101010"
                            >
                            </div>
                            <div
                                class="h-16 aspect-[1/1] rounded-lg"
                                style="background:#8C8C8C"
                            >
                            </div>
                            <div
                                class="h-16 aspect-[1/1] rounded-lg"
                                style="background:#FAF9F6"
                            >
                            </div>
                            <div
                                class="h-16 aspect-[1/1] rounded-lg"
                                style="background:#FAFAFA"
                            >
                            </div>
                        </div>
                    </div>

                    <div class="col-span-2">
                        <h3 class="text-zinc-200 font-medium mb-2">
                            Secondary Colors
                        </h3>
                        <div class="flex gap-3">
                            <div
                                class="h-16 aspect-[1/1] rounded-lg"
                                style="background:#FACC15"
                            >
                            </div>
                            <div
                                class="h-16 aspect-[1/1] rounded-lg"
                                style="background:#EAB308"
                            >
                            </div>
                        </div>
                    </div>

                    <div>
                        <h3 class="mt-6 text-zinc-200 font-medium">
                            Typography
                        </h3>
                        <div class="flex gap-3">
                            <div
                                class="mt-2 rounded-xxl text-zinc-200 p-4 h-40 aspect-[3/2] flex flex-col justify-end"
                            >
                                <p class="text-5xl font-bold">Aa</p>
                                <p class="mt-1 text-zinc-300">Avenir Next</p>
                            </div>

                            <div
                                class="mt-2 rounded-xxl text-zinc-200 p-4 h-40 aspect-[3/2] flex flex-col justify-end"
                            >
                                <p class="text-3xl font-bold">Heading 2</p>
                                <p class="mt-1 text-zinc-300">Avenir Next</p>
                                <p class="text-3xl">32 px</p>
                            </div>

                            <div
                                class="mt-2 rounded-xxl text-zinc-200 p-4 h-40 aspect-[3/2] flex flex-col justify-end"
                            >
                                <p class="text-2xl font-bold">Heading 3</p>
                                <p class="mt-1 text-zinc-300">Avenir Next</p>
                                <p class="text-2xl">24 px</p>
                            </div>

                            <div
                                class="mt-2 rounded-xxl text-zinc-200 p-4 h-40 aspect-[3/2] flex flex-col justify-end"
                            >
                                <p class="text-xl font">Body</p>
                                <p class="mt-1 text-zinc-300">Avenir Next</p>
                                <p>16 px</p>
                            </div>

                            <div
                                class="mt-2 rounded-xxl text-zinc-200 p-4 h-40 aspect-[3/2] flex flex-col justify-end"
                            >
                                <p class="text-l font-italic">Caption</p>
                                <p class="mt-1 text-zinc-300">Avenir Next</p>
                                <p class="text-sm">14 px</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        {/* PAGE OVERVIEWS */}
        <section class="mb-14 space-y-10">
            {
                [
                    {
                        title: "Home Page Overview",
                        image: UF2,
                        summary:
                            "A focused homepage with a clear value statement and prominent CTAs, followed by a concise services grid, client testimonials, and featured projects to help visitors evaluate work and contact quickly.",
                        bullets: [
                            {
                                topic: "Hero",
                                description:
                                    "Bold purple hero with a concise headline, short subhead, and two CTAs.",
                            },
                            {
                                topic: "Our Services",
                                description:
                                    "Bold purple hero with a concise headline, short subhead, and two CTAs.",
                            },
                            {
                                topic: "Testimonials",
                                description:
                                    "Bold purple hero with a concise headline, short subhead, and two CTAs.",
                            },
                            {
                                topic: "Featured Projects",
                                description:
                                    "Bold purple hero with a concise headline, short subhead, and two CTAs.",
                            },
                        ],
                    },
                    {
                        title: "Work Page Overview",
                        image: UF2,
                        summary:
                            "A focused homepage with a clear value statement and prominent CTAs, followed by a concise services grid, client testimonials, and featured projects to help visitors evaluate work and contact quickly.",
                    },
                    {
                        title: "Service Page Overview",
                        image: UF2,
                        summary:
                            "A focused homepage with a clear value statement and prominent CTAs, followed by a concise services grid, client testimonials, and featured projects to help visitors evaluate work and contact quickly.",
                    },
                    {
                        title: "About Page Overview",
                        image: UF2,
                        summary:
                            "A focused homepage with a clear value statement and prominent CTAs, followed by a concise services grid, client testimonials, and featured projects to help visitors evaluate work and contact quickly.",
                    },
                    {
                        title: "Blog Page Overview",
                        image: UF2,
                        summary:
                            "A focused homepage with a clear value statement and prominent CTAs, followed by a concise services grid, client testimonials, and featured projects to help visitors evaluate work and contact quickly.",
                    },
                ].map(({ title, image, summary, bullets }, index) => (
                    <h3 class="text-xl font-semibold text-zinc-100">
                                {title}
                            </h3>
                    <div class={`grid md:grid-cols-2 gap-6 items-start ${index % 2 === 1 ? '[&>*:first-child]:order-2' : ''  }`}>
                        <div>
                                    <p class="text-zinc-300 mt-2">{summary}</p>
                                    <div class="prose prose-invert max-w-none mt-5">
                                        <ul class="text-zinc-200">
                                            {bullets?.map(
                                                ({ topic, description }) => (
                                                    <li>
                                                        <span class="font-bold">
                                                            {topic}:
                                                        </span>
                                                        {description}
                                                    </li>
                                                ),
                                            )}
                                        </ul>
                                    </div>
                                </div>
                                <Image
                                    src={image}
                                    alt="Vyomite mobile screen"
                                    class="aspect-[4.3] rounded-xl bg-zinc-800/50"
                                    loading="lazy"
                                />
                        
                    </div>
                ))
            }
        </section>

        {/* PROTOTYPE */}
        <section class="mb-14">
            <h2
                class="text-2xl sm:text-3xl font-semibold tracking-tight text-zinc-100"
            >
                Prototype
            </h2>
            <div
                class="mt-6 rounded-3xl border border-purple-400/30 bg-zinc-900/70 p-6 sm:p-8"
            >
                <div class="max-w-2xl">
                    <h3 class="text-xl font-semibold text-zinc-100">
